<header class="header menu_fixed">
  <div id="logo">
    <a href="#">
      <img src="https://i.imgur.com/usFXtM1.png" width="auto" height="40" alt="" class="logo_normal">
      <img src="https://i.imgur.com/usFXtM1.png" width="auto" height="40" alt="" class="logo_sticky">
    </a>
  </div>
  <ul id="top_menu">
    <% if user_signed_in? %>
    <li><%= link_to "Log out", destroy_user_session_path, class: "btn_top", method: :delete %></li>
    <% elsif admin_signed_in? %>
    <li><%= link_to "Admin Log out", destroy_admin_session_path, class: "btn_top btn-warning", method: :delete %></li>
    <% else %>
    <li><%= link_to "Log in", new_user_session_path, class: "btn_top" %></li>
    <% end %>

  </ul>
  <!-- /top_menu -->
  <a href="#menu" class="btn_mobile">
    <div class="hamburger hamburger--spin" id="hamburger">
      <div class="hamburger-box">
        <div class="hamburger-inner"></div>
      </div>
    </div>
  </a>
  <!-- /btn_mobile -->
  <nav id="menu" class="main-menu">
    <ul>
      <li><span>
        <%= link_to "Home", root_path %>
      </span></li>
      <li><span>
        <%= link_to "About", about_path %>
      </span></li>
      <li><span>
        <%= link_to "Contact", contact_path %>
      </span></li>
      <li><span>
        <%= link_to "Restaurants", restaurant_index_path %>
      </span></li>
      <% if user_signed_in? %>
      <li><span>
        <%= link_to "Profile", edit_user_registration_path %>
      </span></li>
      <% end %>
    </ul>
  </nav>
</header>
