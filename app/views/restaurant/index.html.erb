<main>
  <div class="container margin_60_35">

    <div class="isotope-wrapper py-3">
      <% $count = 0 %>
      <% @all_res.each do |r| %>
      <% if $count < 10 %>
      <div class="company_listing isotope-item high" style="width: 100%">
        <div class="row">
          <div class="col-md-9">
            <div class="company_info">
              <figure><a href="reviews-page.html"><img src="img/brands/1.png" alt=""></a></figure>
              <h3><%= r.name %></h3>
              <p>Địa chỉ: <%= r.address %></p>
              <p>Số điện thoại: <%= r.phone %></p>
            </div>
          </div>
          <div class="col-md-3">
            <div class="text-center float-lg-right">
              <span class="rating">
                <strong><%= r.comments.count %> comment <%= r.vote_num %>/5.0</strong>
                <% (1..5).each do |i| %>
                  <% if i <= r.vote_num %>
                  <i class="fas fa-star"></i>
                  <% elsif (i - r.vote_num) <1 %>
                  <i class="fas fa-star-half-alt"></i>
                  <% else %>
                  <i class="far fa-star"></i>
                  <% end %>
                <% end %>
              </span>
              <%= link_to  "Xem thêm", restaurant_path(r), class: "btn_1 small" %>
            </div>
          </div>
        </div>
      </div>
      <% $count+=1 %>
      <% end %>
      <!-- /company_listing -->
      <% end %>
    </div>
    <!-- /isotope-wrapper -->

    <p class="text-center"><a href="#0" class="btn_1 rounded add_top_15">Xem thêm</a></p>

  </div>

</main>
