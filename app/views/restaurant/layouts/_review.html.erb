<div class="box_general company_info">
  <div class="row">
    <h5 style="width: 100%; padding: 10px 15px 0px 10px;border-bottom: 1px solid #eee;margin-bottom: 20px;">Đánh giá của bạn</h5>
    <hr>
  </div>
  <% if user_signed_in? %>
  <%= form_for :comment, url: "/comments", method: :POST do |f| %>
  <div class="rating_submit">
    <div class="form-group">
      <label class="d-block">Đánh giá Sao</label>
      <span class="rating">
        <%= f.radio_button :rating_input, "5", class: "rating-input",id: "5_star"%> <label for="5_star" class="rating-star"></label>
        <%= f.radio_button :rating_input, "4", class: "rating-input",id: "4_star"%> <label for="4_star" class="rating-star"></label>
        <%= f.radio_button :rating_input, "3", class: "rating-input",id: "3_star"%> <label for="3_star" class="rating-star"></label>
        <%= f.radio_button :rating_input, "2", class: "rating-input",id: "2_star"%> <label for="2_star" class="rating-star"></label>
        <%= f.radio_button :rating_input, "1", class: "rating-input",id: "1_star"%> <label for="1_star" class="rating-star"></label>
      </span>
    </div>
  </div>
  <div class="form-group">
    <label>Bình luận</label>
      <%= f.hidden_field :restaurant_id, value: @res.id %>
      <%= f.text_area :content %><br />
      <%= f.submit %>
  </div>
  <% end %>
  <% else %>
  Bạn cần <%= link_to  "đăng nhập", new_user_session_path %> để thực hiện chức năng này
  <% end %>
</div>
